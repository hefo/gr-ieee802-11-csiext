<?xml version="1.0"?>

<block>
	<name>WiFi Parse MAC (CSIEXT)</name>
	<key>ieee802_11_csiext_parse_mac</key>
	<category>[IEEE802.11 (CSIEXT)]</category>
	<import>import ieee802_11_csiext</import>
	<make>ieee802_11_csiext.parse_mac($log, $debug, $logcsi, $filename)</make>

	<param>
		<name>Log</name>
		<key>log</key>
		<value>False</value>
		<type>bool</type>

		<option>
			<name>Enable</name>
			<key>True</key>
		</option>
		<option>
			<name>Disable</name>
			<key>False</key>
		</option>
	</param>

	<param>
		<name>Debug</name>
		<key>debug</key>
		<value>False</value>
		<type>bool</type>

		<option>
			<name>Enable</name>
			<key>True</key>
		</option>
		<option>
			<name>Disable</name>
			<key>False</key>
		</option>
	</param>
	
	<param>
		<name>Log CSI to file</name>
		<key>logcsi</key>
		<value>False</value>
		<type>bool</type>

		<option>
			<name>Enable</name>
			<key>True</key>
		</option>
		<option>
			<name>Disable</name>
			<key>False</key>
		</option>
	</param>
	
	<param>
		<name>CSI file</name>
		<key>filename</key>
		<value>wifi_capture.csv</value>
		<type>string</type>
	</param>

	<sink>
		<name>in</name>
		<type>message</type>
	</sink>

	<source>
		<name>fer</name>
		<type>message</type>
		<optional>1</optional>
	</source>
	
	<source>
		<name>csi_data</name>
		<type>message</type>
		<optional>1</optional>
	</source>
</block>

